<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent" android:layout_height="56dp"
        android:background="@color/coffee_cream_white"
        android:paddingStart="16dp" android:paddingEnd="16dp" />

    <ScrollView
        android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical" android:padding="16dp"
            android:layout_width="match_parent" android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/logo_bdino"
                android:layout_width="120dp" android:layout_height="120dp"
                android:layout_gravity="center" android:contentDescription="BDINO"/>

            <GridLayout
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:columnCount="2" android:useDefaultMargins="true"
                android:layout_marginTop="8dp">

                <FrameLayout
                    android:id="@+id/cardEspresso"
                    android:layout_width="0dp" android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_card_glass"
                    android:foreground="@drawable/ripple_glass"
                    android:elevation="6dp" android:padding="12dp"/>

                <FrameLayout
                    android:id="@+id/cardFilter"
                    android:layout_width="0dp" android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_card_glass"
                    android:foreground="@drawable/ripple_glass"
                    android:elevation="6dp" android:padding="12dp"/>

                <FrameLayout
                    android:id="@+id/cardSpecial"
                    android:layout_width="0dp" android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_card_glass"
                    android:foreground="@drawable/ripple_glass"
                    android:elevation="6dp" android:padding="12dp"/>

                <FrameLayout
                    android:id="@+id/cardAlcoholic"
                    android:layout_width="0dp" android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_card_glass"
                    android:foreground="@drawable/ripple_glass"
                    android:elevation="6dp" android:padding="12dp"/>

                <FrameLayout
                    android:id="@+id/cardIced"
                    android:layout_width="0dp" android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_card_glass"
                    android:foreground="@drawable/ripple_glass"
                    android:elevation="6dp" android:padding="12dp"/>

                <FrameLayout
                    android:id="@+id/cardTurkish"
                    android:layout_width="0dp" android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_card_glass"
                    android:foreground="@drawable/ripple_glass"
                    android:elevation="6dp" android:padding="12dp"/>
            </GridLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>