<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4EADB"
    tools:context=".MainActivity">

    <!-- ÜST İKONLAR: Favori - AI - Ayarlar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnFavorite"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_favorite"
            android:contentDescription="@string/favorites" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btnAi"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_ai_barista"
            android:contentDescription="@string/ai_barista" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btnSettings"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_settings"
            android:contentDescription="@string/settings" />
    </LinearLayout>

    <!-- BDINO LOGO -->
    <ImageView
        android:id="@+id/imgLogoMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="24dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_bdino"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="3:2"
        tools:src="@drawable/ic_launcher_foreground" />

    <!-- 2x3 KART IZGARASI -->
    <LinearLayout
        android:id="@+id/layoutGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/imgLogoMain"
        app:layout_constraintBottom_toTopOf="@+id/txtFooter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 1. SATIR: ESPRESSO – FİLTRE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardEspresso"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="26dp"
                app:cardElevation="4dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="14dp"
                    android:background="#222222">

                    <ImageView
                        android:id="@+id/imgEspresso"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_espresso"
                        android:contentDescription="@string/category_espresso" />

                    <TextView
                        android:id="@+id/txtEspresso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/category_espresso"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFilter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="26dp"
                app:cardElevation="4dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="14dp"
                    android:background="#222222">

                    <ImageView
                        android:id="@+id/imgFilter"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_filter"
                        android:contentDescription="@string/category_filter" />

                    <TextView
                        android:id="@+id/txtFilter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/category_filter"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- 2. SATIR: SPECIAL – ALKOLLÜ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSpecial"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="26dp"
                app:cardElevation="4dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="14dp"
                    android:background="#222222">

                    <ImageView
                        android:id="@+id/imgSpecial"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_special"
                        android:contentDescription="@string/category_special" />

                    <TextView
                        android:id="@+id/txtSpecial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/category_special"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAlcoholic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="26dp"
                app:cardElevation="4dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="14dp"
                    android:background="#222222">

                    <ImageView
                        android:id="@+id/imgAlcoholic"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_alcoholic"
                        android:contentDescription="@string/category_alcoholic" />

                    <TextView
                        android:id="@+id/txtAlcoholic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/category_alcoholic"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- 3. SATIR: ICE – TÜRK -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardIced"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="26dp"
                app:cardElevation="4dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="14dp"
                    android:background="#222222">

                    <ImageView
                        android:id="@+id/imgIced"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_iced"
                        android:contentDescription="@string/category_iced" />

                    <TextView
                        android:id="@+id/txtIced"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/category_iced"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTurkish"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="26dp"
                app:cardElevation="4dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="14dp"
                    android:background="#222222">

                    <ImageView
                        android:id="@+id/imgTurkish"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_turkish"
                        android:contentDescription="@string/category_turkish" />

                    <TextView
                        android:id="@+id/txtTurkish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/category_turkish"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

    <!-- FOOTER -->
    <TextView
        android:id="@+id/txtFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/footer_made_by"
        android:textSize="12sp"
        android:textColor="#B67A40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>