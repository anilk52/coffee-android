<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <!-- ÜST AKSİYONLAR: Favori - AI - Ayarlar -->
    <LinearLayout
        android:id="@+id/layoutTopActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <ImageButton
            android:id="@+id/btnFavorites"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/favorites"
            android:src="@android:drawable/btn_star_big_off" />

        <ImageButton
            android:id="@+id/btnAiBarista"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="AI Barista"
            android:src="@android:drawable/ic_dialog_info"
            android:scaleType="center"
            android:padding="4dp" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/settings"
            android:src="@android:drawable/ic_menu_preferences" />

    </LinearLayout>

    <!-- LOGO -->
    <ImageView
        android:id="@+id/imgLogoBdino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/logo_bdino"
        android:contentDescription="@string/app_name" />

    <!-- KATEGORİ KARTLARI -->
    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <FrameLayout
            android:id="@+id/cardEspresso"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="6dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Espresso"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cardFilter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="6dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Filtre"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <FrameLayout
            android:id="@+id/cardSpecial"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="6dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Special"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cardAlcoholic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="6dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Alkollü"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <FrameLayout
            android:id="@+id/cardIced"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="6dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ice"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cardTurkish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="6dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Türk"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp" />
        </FrameLayout>
    </LinearLayout>

    <!-- İMZA -->
    <TextView
        android:id="@+id/txtSignature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/by_signature"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />

</LinearLayout>