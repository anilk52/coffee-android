<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coffee_beige">

    <!-- Uygulama Başlığı -->
    <TextView
        android:id="@+id/txtAppTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="BDINO Coffee"
        android:textColor="@color/coffee_deep_green"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnFavorites" />

    <!-- Tagline -->
    <TextView
        android:id="@+id/txtTagline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="24dp"
        android:text="Kategorini seç, tarifini aç, MiLO'ya sor."
        android:textColor="@color/coffee_latte_brown"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/txtAppTitle"
        app:layout_constraintTop_toBottomOf="@id/txtAppTitle"
        app:layout_constraintEnd_toEndOf="@id/txtAppTitle" />

    <!-- Üst ikonlar -->
    <ImageButton
        android:id="@+id/btnFavorites"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="72dp"
        android:background="@android:color/transparent"
        android:contentDescription="Favoriler"
        android:padding="4dp"
        android:src="@android:drawable/btn_star_big_off"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAI" />

    <ImageButton
        android:id="@+id/btnAI"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="AI Barista"
        android:padding="4dp"
        android:src="@android:drawable/ic_btn_speak_now"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSettings" />

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="Ayarlar"
        android:padding="4dp"
        android:src="@android:drawable/ic_menu_preferences"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- KATEGORİ GRID (3 / 3 / 3) -->
    <LinearLayout
        android:id="@+id/categoryContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/txtTagline"
        app:layout_constraintBottom_toTopOf="@+id/txtFooter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 1. SATIR: Espresso / Filter / Latte Lab -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardEspresso"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/coffee_deep_green">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Espresso"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFilter"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/coffee_deep_green">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Filter"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardLatteLab"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/coffee_deep_green">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Latte Lab"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Boşluk -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- 2. SATIR: Iced / Turkish / Alcoholic -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardIced"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/coffee_deep_green">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Iced"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTurkish"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/coffee_deep_green">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Turkish"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAlcoholic"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/coffee_deep_green">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Alcoholic"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Boşluk -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- 3. SATIR: Frappe / Signature / Brew Guide -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFrappe"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/coffee_deep_green">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Frappe"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSignature"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/coffee_deep_green">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Signature"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardBrewGuide"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/coffee_deep_green">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Brew Guide"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <!-- Alt imza -->
    <TextView
        android:id="@+id/txtFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Hazırlayan: Anıl K☕"
        android:textColor="@color/coffee_latte_brown"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>