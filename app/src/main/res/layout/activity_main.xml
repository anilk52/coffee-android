<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/coffee_cream_white"
    android:padding="16dp"
    tools:context="MainActivity">

    <!-- BDINO Coffee Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo_bdino"
        android:contentDescription="@string/app_name"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="16dp"
        android:tint="@null" />

    <!-- Selam Barista veya başlık -->
    <TextView
        android:id="@+id/txtGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selam Barista!"
        android:textColor="@color/coffee_deep_green"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <!-- Kategoriler -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never">

        <GridLayout
            android:id="@+id/gridCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Espresso -->
            <LinearLayout
                android:id="@+id/cardEspresso"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/cup_espresso_70ml"
                    android:contentDescription="Espresso" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Espresso"
                    android:textColor="@color/deep_green"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Filter -->
            <LinearLayout
                android:id="@+id/cardFilter"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/cup_v60"
                    android:contentDescription="Filtre Kahve" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filtre"
                    android:textColor="@color/deep_green"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Special -->
            <LinearLayout
                android:id="@+id/cardSpecial"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/cup_pistachio_latte"
                    android:contentDescription="Special Kahve" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Special"
                    android:textColor="@color/deep_green"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Alkollü -->
            <LinearLayout
                android:id="@+id/cardAlcoholic"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/cup_irish_coffee"
                    android:contentDescription="Alkollü Kahve" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alkollü"
                    android:textColor="@color/deep_green"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Iced -->
            <LinearLayout
                android:id="@+id/cardIced"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/cup_iced_latte"
                    android:contentDescription="Iced Kahve" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iced"
                    android:textColor="@color/deep_green"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Türk -->
            <LinearLayout
                android:id="@+id/cardTurkish"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/cup_t_70ml"
                    android:contentDescription="Türk Kahvesi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Türk"
                    android:textColor="@color/deep_green"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

        </GridLayout>
    </ScrollView>

</LinearLayout>