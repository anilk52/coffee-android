<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5EEE3"
    android:padding="16dp">

    <!-- ÜST ÇUBUK: Favori - AI - Ayarlar -->
    <LinearLayout
        android:id="@+id/layoutTopActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <!-- FAVORİLER -->
        <ImageView
            android:id="@+id/btnFavorite"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_favorite"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:contentDescription="@string/favorites" />

        <!-- SOL BOŞLUK -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- AI BARISTA -->
        <ImageView
            android:id="@+id/btnAi"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_ai_barista"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:contentDescription="@string/ai_barista" />

        <!-- SAĞ BOŞLUK -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- AYARLAR -->
        <ImageView
            android:id="@+id/btnSettings"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_settings"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:contentDescription="@string/settings" />
    </LinearLayout>

    <!-- LOGO -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/logo_bdino"
        android:adjustViewBounds="true" />

    <!-- 2x3 KATEGORİ GRID (BASİT VERSİYON) -->
    <GridLayout
        android:id="@+id/gridCategories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:rowCount="3"
        android:columnCount="2"
        android:useDefaultMargins="true">

        <!-- ESPRESSO -->
        <FrameLayout
            android:id="@+id/cardEspresso"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_card" />

        <!-- FİLTRE -->
        <FrameLayout
            android:id="@+id/cardFilter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_card" />

        <!-- SPECIAL -->
        <FrameLayout
            android:id="@+id/cardSpecial"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_card" />

        <!-- ALKOLLÜ -->
        <FrameLayout
            android:id="@+id/cardAlcoholic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_card" />

        <!-- ICE -->
        <FrameLayout
            android:id="@+id/cardIced"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_card" />

        <!-- TÜRK -->
        <FrameLayout
            android:id="@+id/cardTurkish"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_card" />
    </GridLayout>

    <!-- FOOTER -->
    <TextView
        android:id="@+id/txtFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="Hazırlayan: Anıl &amp; GPT-5 ☕"
        android:textColor="#C08B52"
        android:textSize="12sp" />

</LinearLayout>