<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@color/coffee_beige"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/coffee_beige"
        app:title="BDINO Coffee"
        app:titleTextColor="@color/coffee_deep_green"
        app:navigationIcon="@android:drawable/ic_menu_sort_by_size"
        app:menu="@menu/main_menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowOrderPreserved="false">

                <!-- Espresso -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardEspresso"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardUseCompatPadding="true"
                    app:layout_columnWeight="1"
                    app:strokeColor="@color/coffee_latte_brown"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:text="Espresso"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/coffee_deep_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Kısa & yoğun"
                            android:textSize="12sp"
                            android:textColor="@color/coffee_latte_brown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Filtre -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardFiltre"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardUseCompatPadding="true"
                    app:layout_columnWeight="1"
                    app:strokeColor="@color/coffee_latte_brown"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:text="Filtre"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/coffee_deep_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Temiz & berrak"
                            android:textSize="12sp"
                            android:textColor="@color/coffee_latte_brown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Special -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSpecial"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardUseCompatPadding="true"
                    app:layout_columnWeight="1"
                    app:strokeColor="@color/coffee_latte_brown"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:text="Special"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/coffee_deep_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Tarz & yorum"
                            android:textSize="12sp"
                            android:textColor="@color/coffee_latte_brown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Alkollü -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAlkollu"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardUseCompatPadding="true"
                    app:layout_columnWeight="1"
                    app:strokeColor="@color/coffee_latte_brown"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:text="Alkollü"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/coffee_deep_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Şık & kokteyl"
                            android:textSize="12sp"
                            android:textColor="@color/coffee_latte_brown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Iced -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardIce"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardUseCompatPadding="true"
                    app:layout_columnWeight="1"
                    app:strokeColor="@color/coffee_latte_brown"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:text="Iced"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/coffee_deep_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Serin & ferah"
                            android:textSize="12sp"
                            android:textColor="@color/coffee_latte_brown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Türk -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardTurk"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardUseCompatPadding="true"
                    app:layout_columnWeight="1"
                    app:strokeColor="@color/coffee_latte_brown"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:text="Türk"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/coffee_deep_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Klasik cezve"
                            android:textSize="12sp"
                            android:textColor="@color/coffee_latte_brown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </androidx.gridlayout.widget.GridLayout>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>