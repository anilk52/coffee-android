<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/aiBaristaRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coffee_beige">

    <!-- Üst başlık -->
    <TextView
        android:id="@+id/txtAiHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:text="BrewAi by bdinoᴼ"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/coffee_deep_green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Açıklama -->
    <TextView
        android:id="@+id/txtAiDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="4dp"
        android:text="Kahve hakkında ne merak ediyorsan sor: tarifler, oranlar, ekipman, tavsiye..."
        android:textSize="14sp"
        android:textColor="@color/coffee_latte_brown"
        app:layout_constraintTop_toBottomOf="@id/txtAiHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sohbet alanı -->
    <ScrollView
        android:id="@+id/scrollConversation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/txtAiDescription"
        app:layout_constraintBottom_toTopOf="@+id/layoutInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtAiConversation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="BrewAi hazır. Bir kahve sorusu sorarak başlayabilirsin."
            android:textSize="14sp"
            android:textColor="@color/coffee_latte_brown" />
    </ScrollView>

    <!-- Alt giriş alanı -->
    <LinearLayout
        android:id="@+id/layoutInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/edtAiMessage"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_input_rounded"
            android:hint="BrewAi’ye sor..."
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/coffee_deep_green"
            android:textColorHint="@color/coffee_latte_brown"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="3" />

        <ImageButton
            android:id="@+id/btnAiSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="Gönder"
            android:src="@android:drawable/ic_menu_send" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>