<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal" android:padding="12dp">

    <ImageView
        android:id="@+id/imgThumb"
        android:layout_width="64dp" android:layout_height="64dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1" android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Kahve Adı" android:textSize="16sp" android:maxLines="1"/>

        <TextView
            android:id="@+id/txtSub"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Açıklama • Boy" android:textSize="13sp" android:maxLines="2"/>
    </LinearLayout>
</LinearLayout>