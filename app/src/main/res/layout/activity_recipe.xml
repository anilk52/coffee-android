<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="12dp">

    <EditText
        android:id="@+id/searchInput"
        android:layout_width="match_parent" android:layout_height="48dp"
        android:background="@drawable/bg_card_glass"
        android:hint="Kahve ara..."
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:textColor="@color/coffee_deep_emerald"
        android:textColorHint="@color/coffee_warm_brown"
        android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRecipes"
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="1" android:layout_marginTop="8dp"
        android:layoutAnimation="@anim/layout_fall_down"/>
</LinearLayout>