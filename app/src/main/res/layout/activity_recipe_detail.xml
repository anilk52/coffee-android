<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coffee_beige">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/coffee_cream_white"
        app:titleTextColor="@color/coffee_deep_green"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- İçerik -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/coffeeImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="Kahve Görseli" />

            <TextView
                android:id="@+id/coffeeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarif Adı"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/coffee_deep_green"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/coffeeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarif açıklaması burada..."
                android:textColor="@color/coffee_latte_brown"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/coffeeMeasure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ölçü"
                android:textColor="@color/coffee_deep_green"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/coffeeTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barista ipucu"
                android:textColor="@color/coffee_latte_brown"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/coffeeNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eğlenceli not"
                android:textColor="@color/coffee_latte_brown"
                android:layout_marginTop="8dp" />

            <ImageView
                android:id="@+id/shareButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:contentDescription="Paylaş Butonu"
                android:src="@android:drawable/ic_menu_share" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>