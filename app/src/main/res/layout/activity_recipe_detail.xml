<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5EBDD"
    android:padding="16dp"
    tools:context=".ui.RecipeDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
    android:id="@+id/imgHero"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:scaleType="centerCrop"
    android:background="@drawable/ripple_glass"
    android:adjustViewBounds="true"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />
            android:contentDescription="@string/desc_logo" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Espresso"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#222222" />

        <TextView
            android:id="@+id/txtSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="S – 30 ml"
            android:textSize="14sp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/txtMeasure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Ölçü / reçete"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#222222" />

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Detaylı demleme açıklaması burada."
            android:textSize="15sp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/txtTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Barista ipucu"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#222222" />

        <TextView
            android:id="@+id/txtNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Eğlenceli not / hikâye"
            android:textSize="14sp"
            android:textColor="#444444" />

    </LinearLayout>
</ScrollView>