<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/coffee_milk_beige">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Üst görsel -->
        <ImageView
            android:id="@+id/imgHero"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"
            android:maxHeight="@dimen/hero_max_height"
            android:minHeight="@dimen/hero_min_height"
            android:layout_weight="0" />

        <!-- İçerik bloğu -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/p16"
            android:paddingEnd="@dimen/p16"
            android:paddingTop="@dimen/p16"
            android:paddingBottom="@dimen/p24">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="@dimen/f22"
                android:textStyle="bold"
                android:textColor="@color/coffee_deep_emerald"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/p8"
                android:text="Short description"
                android:textSize="@dimen/f15"
                android:textColor="@color/bd_text_secondary"
                android:lineSpacingExtra="1dp" />

            <TextView
                android:id="@+id/txtMeasure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/p10"
                android:text="300 ml"
                android:textSize="@dimen/f14"
                android:textColor="@color/bd_text_primary" />

            <TextView
                android:id="@+id/txtMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/p12"
                android:text="Method steps"
                android:textSize="@dimen/f15"
                android:textColor="@color/bd_text_primary"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:id="@+id/txtTip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/p12"
                android:text="Barista ipucu"
                android:textSize="@dimen/f15"
                android:textColor="@color/coffee_warm_brown" />

            <TextView
                android:id="@+id/txtNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/p8"
                android:text="Not"
                android:textSize="@dimen/f14"
                android:textColor="@color/bd_text_secondary" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>