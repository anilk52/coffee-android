<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="16dp">

    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Ayarlar" android:textSize="20sp" android:textStyle="bold"
        android:textColor="@color/coffee_deep_green" />

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:gravity="center_vertical"
        android:layout_marginTop="16dp" android:padding="12dp"
        android:background="@drawable/bg_card_glass">

        <TextView
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:text="Koyu Tema"
            android:textColor="@color/coffee_deep_green" android:textSize="16sp"/>

        <Switch
            android:id="@+id/switchTheme"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnShareApp"
        android:layout_width="match_parent" android:layout_height="48dp"
        android:text="Uygulamayı Paylaş" android:layout_marginTop="16dp"/>
</LinearLayout>