<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5EEE3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- BAŞLIK -->
        <TextView
            android:id="@+id/txtTitleSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ayarlar"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1F5131"
            android:layout_marginBottom="12dp" />

        <!-- AÇIKLAMA -->
        <TextView
            android:id="@+id/txtSubtitleSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BDINO Coffee deneyimini kendine göre ayarla."
            android:textSize="14sp"
            android:textColor="#7A5A3A"
            android:layout_marginBottom="24dp" />

        <!-- EV / KAFE MODU -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ev Modu / Kafe Modu"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F5131" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Evde demleme mi, yoksa kafe barista modu mu?"
                    android:textSize="13sp"
                    android:textColor="#7A5A3A" />
            </LinearLayout>

            <Switch
                android:id="@+id/switchHomeMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- AYIRICI -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0D3C2"
            android:layout_marginVertical="8dp" />

        <!-- KOYU TEMA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Koyu Tema"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F5131" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Göz yormayan koyu modu ileride buradan açacaksın."
                    android:textSize="13sp"
                    android:textColor="#7A5A3A" />
            </LinearLayout>

            <Switch
                android:id="@+id/switchDarkMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- AYIRICI -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0D3C2"
            android:layout_marginVertical="8dp" />

        <!-- SESLİ BARİSTA REHBERİ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sesli Barista Rehberi"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F5131" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tarifleri okuyan, süreleri söyleyen bdinoᴼ asistan."
                    android:textSize="13sp"
                    android:textColor="#7A5A3A" />
            </LinearLayout>

            <Switch
                android:id="@+id/switchVoiceGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>