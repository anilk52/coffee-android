<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Uygulama ana teması -->
    <style name="Theme.BdinoCoffee" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- M3 ana renkler -->
        <item name="colorPrimary">@color/md3_colorPrimary</item>
        <item name="colorOnPrimary">@color/md3_colorOnPrimary</item>
        <item name="colorSecondary">@color/md3_colorSecondary</item>
        <item name="colorOnSecondary">@color/md3_colorOnSecondary</item>
        <item name="colorSurface">@color/md3_colorSurface</item>
        <item name="colorOnSurface">@color/md3_colorOnSurface</item>
        <item name="android:colorBackground">@color/md3_colorBackground</item>
        <item name="colorOnBackground">@color/md3_colorOnBackground</item>
        <item name="android:navigationBarColor">@color/md3_colorBackground</item>
        <item name="android:statusBarColor">@color/md3_colorBackground</item>

        <!-- Yazı tipi (varsa) -->
        <!-- <item name="fontFamily">@font/montserrat_semibold</item> -->

        <!-- Bölücü & outline -->
        <item name="android:listDivider">@color/bd_divider</item>
        <item name="android:divider">@color/bd_divider</item>
        <item name="outline">@color/md3_colorOutline</item>
    </style>

    <!-- Splash teması (core-splashscreen ile) -->
    <style name="Theme.BdinoCoffee.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/coffee_cream_white</item>
        <!-- Vektör/PNG logon yoksa, geçici olarak ic_launcher -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.BdinoCoffee</item>
    </style>

</resources>