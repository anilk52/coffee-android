<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Uygulama teması -->
    <style name="Theme.Coffee" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">#795548</item>
        <item name="colorPrimaryVariant">#5D4037</item>
        <item name="colorSecondary">#FFA000</item>
    </style>

    <!-- Eski API’lerde (API < 31) Splash için kullandığımız tema -->
    <style name="Theme.Coffee.Splash" parent="Theme.Coffee">
        <item name="android:windowBackground">@color/ic_launcher_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Kartlar için köşe yuvarlama (item_recipe.xml’de app:shapeAppearanceOverlay) -->
    <style name="Shape.RoundedXL">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <!-- METİN STİLLERİ -->
    <!-- Genel bir temel stil istersen -->
    <style name="Text" parent="TextAppearance.MaterialComponents.Body1"/>

    <style name="Text.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
