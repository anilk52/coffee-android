<resources>
    <!-- Uygulama teması: sade, sağlam bir temel -->
    <style name="Theme.Coffee" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- İstersen renkleri değiştir -->
        <item name="colorPrimary">#795548</item>
        <item name="colorPrimaryVariant">#5D4037</item>
        <item name="colorSecondary">#FFA000</item>

        <!-- Eski cihazlarda sorun çıkarmasın -->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Eski API’lerde çalışan Splash teması -->
    <style name="Theme.Coffee.Splash" parent="Theme.Coffee">
        <item name="android:windowBackground">@color/ic_launcher_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
