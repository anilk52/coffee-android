<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Kart görünümü -->
    <style name="CoffeeCard">
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:clipToOutline">true</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Başlık metinleri -->
    <style name="CoffeeTitleText">
        <item name="android:textColor">@color/coffee_deep_green</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Açıklama metinleri -->
    <style name="CoffeeBodyText">
        <item name="android:textColor">@color/coffee_brown_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Buton -->
    <style name="CoffeeButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/coffee_deep_green</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>