<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:label="BDINO Coffee"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.Coffee">

        <!-- Splash ekranı (uygulama açılışında) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme_Coffee_Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Diğer aktiviteler -->
        <activity android:name=".MainActivity" android:exported="false" />
        <activity android:name=".ui.RecipeActivity" android:exported="false" />
        <activity android:name=".ui.RecipeDetailActivity" android:exported="false" />

    </application>

</manifest>