<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:label="Bdino Coffee"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.BdinoCoffee">

        <!-- LAUNCHER: Splash -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.BdinoCoffee.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Ana ekran -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Liste ekranı -->
        <activity
            android:name="com.example.coffee.ui.RecipeActivity"
            android:exported="false" />

        <!-- Detay ekranı -->
        <activity
            android:name="com.example.coffee.ui.RecipeDetailActivity"
            android:exported="false" />

    </application>

</manifest>