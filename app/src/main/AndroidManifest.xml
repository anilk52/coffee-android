<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.coffee">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Bdino Coffee"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.Coffee">

        <!-- LAUNCHER: Sadece MainActivity -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Tarif listesi -->
        <activity android:name=".ui.RecipeActivity" />

        <!-- Tarif detayı -->
        <activity android:name=".ui.RecipeDetailActivity" />

        <!-- Splash kullanmıyoruz (çakışma olmasın diye) -->
        <!-- <activity android:name=".SplashActivity" /> -->
    </application>
</manifest>