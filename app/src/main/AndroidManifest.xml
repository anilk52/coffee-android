<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.BdinoCoffee">

        <!-- İlk açılan ekran: Splash -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Ana menü -->
        <activity android:name=".MainActivity" />

        <!-- Tarif listesi ve detaylar -->
        <activity android:name=".ui.RecipeActivity" />
        <activity android:name=".ui.RecipeDetailActivity" />

        <!-- Favoriler, Ayarlar, AI Barista -->
        <activity android:name=".ui.FavoritesActivity" />
        <activity android:name=".ui.SettingsActivity" />
        <activity android:name=".ui.AiBaristaActivity" />

    </application>

</manifest>